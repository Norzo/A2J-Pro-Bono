<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2J.Views.NewItemPage"
             Title="New House">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Address" FontSize="Medium" />
            <Entry Text="{Binding houseEntry.houseAddress}" FontSize="Small" />
            <Label Text="Bedrooms" FontSize="Medium" />
            <Editor Text="{Binding houseEntry.hosueBedrooms}" FontSize="Small" Margin="0" />
            <Label Text="Rent" FontSize="Medium"/>
            <Editor Text="{Binding houseEntry.houseRent}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
